# ============================================================================
# BACKEND (Render) - Production Environment Variables
# ============================================================================

# Django Settings
DEBUG=False
SECRET_KEY=django-insecure-change-this-to-secure-key-from-docs-deployment-generate_secret_key.py
ALLOWED_HOSTS=your-app-name.onrender.com,www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-app-name.vercel.app,https://www.your-domain.com

# Database (PostgreSQL on Render)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your-db-host.onrender.com
DB_PORT=5432

# API Configuration
API_USERNAME=admin
API_PASSWORD=change-this-to-secure-password

# CORS Settings (Frontend URLs)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://localhost:3000

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ============================================================================
# FRONTEND (Vercel) - Production Environment Variables
# ============================================================================

# Note: In Vercel, set these in Dashboard -> Settings -> Environment Variables

REACT_APP_API_URL=https://your-app-name.onrender.com
REACT_APP_API_USERNAME=admin
REACT_APP_API_PASSWORD=change-this-to-secure-password

# ============================================================================
# DESKTOP APP (Optional) - Production Configuration
# ============================================================================

# Update .env file in desktop app directory before distribution
DESKTOP_API_URL=https://your-app-name.onrender.com
DESKTOP_API_USERNAME=admin
DESKTOP_API_PASSWORD=change-this-to-secure-password
